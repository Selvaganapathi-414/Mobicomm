pipeline {
    agent any

    environment {
        JAVA_HOME = 'C:\\Program Files\\Java\\jdk-21'  // Windows format
        PATH = "${JAVA_HOME}\\bin;${env.PATH}"
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/Selvaganapathi-414/Mobicomm.git'
            }
        }

        stage('Build') {
            steps {
                dir('backend') {   
                    bat 'mvn clean package'   // Use 'bat' instead of 'sh'
                }
            }
        }

        stage('Run Application') {
            steps {
                dir('backend') {
                    script {
                        bat 'start /B java -jar target\\*.jar > app.log 2>&1'  // Windows format
                    }
                }
            }
        }

        stage('Show Logs') {
            steps {
                dir('backend') {
                    script {
                        bat 'type app.log'
                    }
                }
            }
        }
    }

    post {
        success {
            echo "✅ Build and deployment successful!"
        }
        failure {
            echo "❌ Build failed! Check logs for errors."
        }
    }
}
